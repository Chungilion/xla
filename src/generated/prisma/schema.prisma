// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Student {
  id         Int          @id @default(autoincrement())
  studentId  String       @unique // For Vietnamese student IDs
  name       String
  class      String // For class format like E21CQCN02-B
  attendance Attendance[]
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
}

model Attendance {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  status    String // Can be 'ID_Match', 'Name_Match', or 'Absent'
  student   Student  @relation(fields: [studentId], references: [id])
  studentId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ValidationPattern {
  id          Int      @id @default(autoincrement())
  type        String // 'class_prefix', 'class_suffix', 'province', 'class_pattern'
  pattern     String // The actual pattern or value
  description String? // Optional description of what this pattern matches
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([type, pattern])
}
